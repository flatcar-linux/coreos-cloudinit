[Unit]
Description=Load cloud-config from %f
Requires=flatcar-setup-environment.service
After=flatcar-setup-environment.service
After=system-config.target
Before=user-config.target
ConditionFileNotEmpty=%f

[Service]
Type=oneshot
TimeoutSec=10min
RemainAfterExit=yes
EnvironmentFile=-/etc/environment
ExecStart=/usr/bin/flatcar-cloudinit --from-file=%f
